                <field name="partner_id" position="after">
                    <group string='Size'>
                        <group>
                            <field name='neck'/>
                            <field name='chest'/>
                            <field name='waist'/>
                            <field name='sleeve_left'/>
                            <field name='wrist_left'/>
                            <field name='tail'/>
                            <field name='yoke'/>
                            <field name='hips'/>
                            <field name='sleeve_right'/>
                            <field name='wrist_right'/>
                        </group>
                    </group>
                </field>

